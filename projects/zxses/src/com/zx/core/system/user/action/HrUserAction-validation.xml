<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="hrUser.account">
		<field-validator type="requiredstring">
			<message>【登录名】不能为空！</message>
		</field-validator>
	</field>
	<field name="hrUser.name">
		<field-validator type="requiredstring">
			<message>【用户名】不能为空！</message>
		</field-validator>
	</field>
	<field name="hrUser.email">
		<field-validator type="email">
			<message>【邮箱】格式输入不正确！</message>
		</field-validator>
	</field>
</validators>